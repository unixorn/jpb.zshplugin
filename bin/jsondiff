#!/usr/bin/env bash
#
# Diff JSON files and cope with key-order differences by processing with
# json.tool

set -o pipefail

if [[ ! -r "${1}" ]]; then
  echo "Can't read ${1}"
  exit 1
fi

if [[ ! -r "${2}" ]]; then
  echo "Can't read ${2}"
  exit 1
fi

diff -B <( cat "${1}" | python -m json.tool ) <( cat "${2}" | python -m json.tool )
