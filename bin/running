#!/bin/bash

PS_ARGS='wax'

if [ -f /etc/debian_version ];then
  case `cat /etc/debian_version` in
    2.2)
      PS_ARGS='ax'
      ;;
    *)
      PS_ARGS='axe'
      ;;
  esac
fi


if [ ! -z $1 ] ; then
  ps ${PS_ARGS} | grep $* | grep -ve grep -ve ${0}
else
  echo "Specify a process name to search for"
fi
