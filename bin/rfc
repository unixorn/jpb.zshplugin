#!/usr/bin/env bash
#
# License: Apache 2.0.
#
# Read an rfc
#
# Copyright 2026, Joe Block <jpb@unixorn.net>

set -o pipefail
if [[ -n "$DEBUG" ]]; then
  # shellcheck disable=SC2086
  if [[ "$(echo $DEBUG | tr '[:upper:]' '[:lower:]')" == "verbose" ]]; then
    set -x
  fi
fi

function echo-stderr() {
  printf '%s
' "$1" >&2  ## Send message to stderr. Exclude >&2 if you don't want it that way.
}

function debug() {
  if [[ -n "$DEBUG" ]]; then
    echo-stderr "$@"
  fi
}

function has() {
  # Check if a command is in $PATH
  which "$@" > /dev/null 2>&1
}

function get-default-settings() {
  DEFAULT_PAGER='more'
  debug "Looking for a pager program"
  if has less; then
    DEFAULT_PAGER='less'
  fi
  if has bat; then
    DEFAULT_PAGER='bat'
  fi
}

get-default-settings

rfc="rfc${1##rfc}"
url_base="https://www.rfc-editor.org/rfc/${rfc}"
debug "RFC URL: $url_base"

case $(uname) in
  Darwin)
    exec open "${url_base}.html"
    ;;
  *)
    curl -s "${url_base}.txt" | ${PAGER:-$DEFAULT_PAGER}
    exit $?
    ;;
esac
